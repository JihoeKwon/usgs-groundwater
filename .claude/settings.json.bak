{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r \".tool_input.command + \\\" - \\\" + (.tool_input.description // \\\"No description\\\")\" >> \\\"%USERPROFILE%\\.claude\\bash-command-log.txt\\\""
          }
        ]
      }
    ]
  }
}
